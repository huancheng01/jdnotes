{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "jdnotes",
  "version": "1.0.0",
  "identifier": "com.jdnotes.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "jdnotes",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/huancheng01/jdnotes/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUxNEJDNTVCRkFERUQ5NDcKUldSSDJkNzZXOFZMVVdrekR2azI3VXV0eXJZTzR3b1NpQ0FielZONVpSUzdLQ2duUmtoaDFJaEcK"
    }
  }
}
